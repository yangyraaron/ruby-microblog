<div id="<%=model_id%>" class="modal hide fade"  role="dialog" aria-hidden="true">
  <%=form_tag model_path(group),:method=>
  :put do %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h3>new group</h3>
  </div>
  <div class="modal-body">

    <div class="control-group">
      <dl class="dl-horizontal">
        <dt>
          <%=label_tag(:group,:name,:class=>"h-align") %></dt>
        <dd>
          <%= text_field :group,:name,:placeholder=>"name" %></dd>
        <dt>
          <%=label_tag(:group,:description,:class=>"h-align") %></dt>
        <dd>
          <%= text_area :group,:description,:placeholder=>"description",:rows=>5 %></dd>
      </dl>

    </div>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button type="commit" class="btn btn-primary">Save changes</button>
  </div>
  <%end%></div>
