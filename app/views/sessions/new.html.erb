<div >
	<% if flash[:alert] %>
	<p id="notice">
		<%= flash[:alert]%></p>
	<% end %>

	<fieldset>
		<legend><h2>Sign In</h2></legend>
		<div >
			<div class="span6 offset6">
				<%= form_tag do %>
				<div class="control-group">
					<dl class="dl-horizontal">
						<dt>
							<label for="account">Account</label>
						</dt>
						<dd>
							<%=text_field_tag :account,nil,:placeholder=>"Account"%></dd>
					</dl>
					<dl class="dl-horizontal">
						<dt>
							<label for="password">Password</label>
						</dt>
						<dd>
							<%=password_field_tag :password,nil,:placeholder=>"Password"%></dd>
					</dl>
					<dl class="dl-horizontal">
						<dd>
							<%=submit_tag "Sign In",:class=>"btn btn-primary"%></dd>
					</dl>
				</div>
				<%end%></div>
		</div>

	</fieldset>
</div>