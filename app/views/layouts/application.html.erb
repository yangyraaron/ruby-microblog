<!DOCTYPE html>
<html>
<head>
	<title>Microblog</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<%= stylesheet_link_tag   "application", :media =>
	"all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %></head>
<body>
	<div id="header" class="navbar navbar-inverse navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<%=link_to "Microblog",home_path,:class=>
				"brand"%>
				<ul class="nav pull-right">
					<%if session[:user_id]%>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=session[:user_id].account%></a>
						<ul class="dropdown-menu">
							<li>
								<%=link_to "profile",user_path(session[:user_id]) %></li>
							<li>
								<%=link_to "Sign out",signout_path,:method=>:delete %></li>
						</ul>
					</li>

					<%else%>
					<li>
						<%= link_to "Sign in",signin_path%></li>
					<%end%>

					<li>
						<%= link_to "Sign up",new_user_path %></li>
				</ul>

				<%if session[:user_id]%>
				<div id="search_container" class="navbar-search pull-right">
					<input type="text" id="user_filter" class="search-query" placeholder="Search" />
				</div>
				<%end%></div>

		</div>
	</div>
	<div id="content" class="container-fluid content">
		<div class="row-fluid">
			<div class="span2">
				<ul class="nav nav-list">
					<li class="nav-header">Microblog</li>
					<li>
						<a href="#">Home</a>
					</li>
					<li>
						<a href="#">@me</a>
					</li>
					<li>
						<a href="#">comments</a>
					</li>
					<li class="nav-header">group</li>
					<li>
						<a href="#">classmates</a>
					</li>
					<li>
						<a href="#">family</a>
					</li>
				</ul>
			</div>
			<div class="span8">
				<%= yield %></div>
			<div class="span2">
				<ul class="thumbnails">
					<li >
						<a href="#" class="thumbnail">
							<%=image_tag( "gravatar-user-420.png",:size=>"60X60") %></a>
					</li>
				</ul>
			</div>
		</div>
	</div>
	<div id="footer"></div>
	<script type="text/javascript">
		$(document).ready(function() {
			var userFilter = $('#user_filter');

			$(document).keydown(function(e) {
				if (e.keyCode === 13) {
					window.location="<%=users_path%>"+'?filter='+userFilter.val();
				}

			});
		});
	</script>
</body>
</html>