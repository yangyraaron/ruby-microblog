<h1>Listing follows</h1>

<table>
  <tr>
    <th>User</th>
    <th>Following</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @follows.each do |follow| %>
  <tr>
    <td><%= follow.user_id %></td>
    <td><%= follow.following_id %></td>
    <td><%= follow.type %></td>
    <td><%= link_to 'Show', follow %></td>
    <td><%= link_to 'Edit', edit_follow_path(follow) %></td>
    <td><%= link_to 'Destroy', follow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

