<div class="span4">
  <ul class="thumbnails">
    <li >
      <a href="#" class="thumbnail">
        <%=image_tag( "gravatar-user-420.png",:size=>"60X60") %></a>
    </li>
  </ul>
  <ul class="inline center">
    <li>
      <ul class="ul-user-bar">
        <li>
          <span>following</span>
        </li>
        <li>
          <%=@user.following_count%></li>
      </ul>
    </li>
    <li>
      <ul class="ul-user-bar">
        <li>fans</li>

        <li>
          <%=@user.fans_count%></li>

      </ul>
    </li>
    <li>
      <ul class="ul-user-bar">
        <li>message</li>
        <li>
          <%=@user.msg_count%></li>
      </ul>
    </li>

  </ul>
</div>

<div class="span8">
  <h3>
    <%=@user.account%></h3>

  <% if @user.dynamic_desc!=nil%>
  <p>
    <%=@user.dynamic_desc%></p>
  <%end%>

  <ul class="inline">
    <%if @user.is_following_by_current? && @user.is_fans_of_current? %>
    <li>
      <div> <i class="icon-user"></i> <i class=" icon-arrow-left"></i>
        <i class=" icon-arrow-right"></i>
        <i class="icon-user"></i>
      </div>
    </li>
    <%end%>

    <li>
      <%if @user.is_following_by_current?%>
      <%=form_tag follows_path()+"/"+@user.user_id.to_s,:method=>
      :delete do%>
      <%=submit_tag "unfollow",:class=>
      "btn btn-primary"%>
      <%end%></li>

    <%end%></ul>
</div>